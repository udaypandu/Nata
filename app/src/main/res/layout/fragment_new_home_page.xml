<LinearLayout xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="4">

    <ImageView
        android:id="@+id/iv_my_posted_job"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0dp"
        android:layout_weight="1"
        android:background="@drawable/gray_corners"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/nata_members" />

    <ImageView
        android:id="@+id/iv_post_job_vecancey"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0dp"
        android:layout_weight="1"
        android:background="@drawable/gray_corners"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/nata_services" />

    <ImageView
        android:id="@+id/iv_find_job"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0dp"
        android:layout_weight="1"
        android:background="@drawable/gray_corners"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/nata_updates" />

    <ImageView
        android:id="@+id/iv_jobs_applied"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@drawable/gray_corners"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/nata_discussion" />


</LinearLayout>
