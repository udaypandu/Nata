<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/_10dp"
    android:layout_marginLeft="@dimen/_10dp"
    android:layout_marginRight="@dimen/_10dp"
    android:layout_marginStart="@dimen/_10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_invitation_request_is_sent_successfully"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15dp"
        android:gravity="center_horizontal"
        android:text="@string/invitation_request_is_sent_successfully"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_30sp" />

    <TextView
        android:id="@+id/txt_invitation_request_is_sent_successfully_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15dp"
        android:gravity="left"
        android:text="@string/invitation_request_is_sent_successfully_first"
        android:textColor="@color/gray"
        android:textSize="@dimen/_18sp" />

    <TextView
        android:id="@+id/txt_invitation_request_is_sent_successfully_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15dp"
        android:gravity="left"
        android:text="@string/invitation_request_is_sent_successfully_second"
        android:textColor="@color/gray"
        android:textSize="@dimen/_18sp" />

    <TextView
        android:id="@+id/tv_click_here_for_homepage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45dp"
        android:layout_marginBottom="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginTop="@dimen/_30dp"
        android:background="@drawable/red_corners"
        android:gravity="center"
        android:text="@string/click_here_for_homepage"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_20sp"
        android:textStyle="bold"
        android:visibility="visible" />

</LinearLayout>
