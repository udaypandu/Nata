<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_margin="@dimen/_10dp">

<ImageView
    android:id="@+id/img_popular_our_forum"
    android:layout_width="@dimen/_110dp"
    android:layout_height="@dimen/_110dp"
    android:background="@drawable/holo_circle"
    android:src="@drawable/avatar_image" />

<ImageView
    android:layout_width="@dimen/_110dp"
    android:layout_height="@dimen/_110dp"
    android:src="@drawable/bg_transparent_circle" />


<TextView
    android:id="@+id/txt_popular_name"
    android:layout_width="@dimen/_90dp"
    android:layout_height="@dimen/_50dp"
    android:layout_below="@+id/img_popular_our_forum"
    android:gravity="center"
    android:text="@string/ravi_kiran"
    android:textAlignment="center"
    android:textColor="@android:color/black"
    android:textSize="@dimen/_14sp" />

</RelativeLayout>
