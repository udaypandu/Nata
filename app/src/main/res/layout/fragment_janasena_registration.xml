<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/im_registration"
            android:layout_width="140dp"
            android:layout_height="@dimen/_140dp"
            android:layout_marginBottom="@dimen/_20dp"
             android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20dp"
            android:src="@drawable/nata_logo" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45dp"
            android:layout_margin="@dimen/_10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:text="@string/create_an_account"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/im_join_us"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:layout_marginBottom="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_15dp"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_marginRight="@dimen/_15dp"
            android:layout_marginStart="@dimen/_15dp"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@drawable/gray_round_border"
            android:gravity="center"
            android:text="@string/join_us_with"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold"
            android:visibility="visible" />


        <ImageView
            android:id="@+id/im_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_marginRight="@dimen/_15dp"
            android:src="@drawable/or" />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="@dimen/_45dp"
                android:layout_margin="@dimen/_10dp"
                android:id="@+id/im_facebook"
                android:background="@drawable/fb_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:text="@string/fb_icon"
                    android:id="@+id/tv_fb_icon"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/_25sp"
                    android:textColor="@color/fb_color"
                    android:contentDescription="@string/facebook" />

                <TextView
                    android:id="@+id/tv_face_book"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/facebook"
                    android:textAllCaps="true"
                    android:textColor="@color/fb_color"
                    android:textSize="@dimen/_15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="@dimen/_45dp"
                android:layout_margin="@dimen/_10dp"
                android:id="@+id/im_google_plus"
                android:background="@drawable/google_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:id="@+id/tv_google_icon"
                    android:textColor="@color/google_plus_color"
                    android:textSize="@dimen/_25sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/google_icon"
                    android:contentDescription="@string/google" />

                <TextView
                    android:id="@+id/tv_google_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:text="@string/google"
                    android:textColor="@color/google_plus_color"
                    android:textSize="@dimen/_15sp" />


            </LinearLayout>


        </LinearLayout>




        <LinearLayout
            android:id="@+id/ll_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sp"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_marginRight="@dimen/_15dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already_have_an_account"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30dp"
                android:layout_marginStart="@dimen/_10dp"
                android:background="@drawable/bg_button_rectangle"
                android:gravity="center"
                android:paddingBottom="@dimen/_5dp"
                android:paddingEnd="@dimen/_10dp"
                android:paddingStart="@dimen/_10dp"
                android:paddingTop="@dimen/_5dp"
                android:text="@string/login_caps"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


</ScrollView>
