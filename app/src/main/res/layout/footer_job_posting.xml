<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_5dp"
        android:weightSum="@integer/integer_four">

        <LinearLayout
            android:id="@+id/ll_position_one"
            android:layout_width="@dimen/_0dp"
            android:layout_height="match_parent"
            android:layout_weight="@integer/integer_one"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_position_one_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="@dimen/_20sp" />


            <TextView
                android:id="@+id/txt_position_one"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20dp"
                android:gravity="center"
                android:text="@string/update_small"
                android:textColor="@color/gray"
                android:textSize="@dimen/_11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_position_two"
            android:layout_width="@dimen/_0dp"
            android:layout_height="match_parent"
            android:layout_weight="@integer/integer_one"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_position_two_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="@dimen/_20sp" />

            <TextView
                android:id="@+id/txt_position_two"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20dp"
                android:gravity="center"
                android:text="@string/services_small"
                android:textColor="@color/gray"
                android:textSize="@dimen/_11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_position_three"
            android:layout_width="@dimen/_0dp"
            android:layout_height="match_parent"
            android:layout_weight="@integer/integer_one"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_position_three_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="@dimen/_20sp" />

            <TextView
                android:id="@+id/txt_position_three"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20dp"
                android:gravity="center"
                android:textColor="@color/gray"
                android:text="@string/discussions_small"
                android:textSize="@dimen/_11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_position_four"
            android:layout_width="@dimen/_0dp"
            android:layout_height="match_parent"
            android:layout_weight="@integer/integer_one"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_position_four_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="@dimen/_20sp" />

            <TextView
                android:id="@+id/txt_position_four"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20dp"
                android:gravity="center"
                android:textColor="@color/gray"
                android:text="@string/members"
                android:textSize="@dimen/_11sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>