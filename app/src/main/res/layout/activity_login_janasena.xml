<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45dp"
        android:background="@color/colorPrimary"
        android:gravity="center|center_vertical"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sp"
        android:textStyle="bold" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_login"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="@dimen/_45dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_15dp"
                    android:paddingRight="@dimen/_10dp"
                    android:paddingStart="@dimen/_10dp"
                    android:text="@string/login"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_22sp" />

                <TextView
                    android:id="@+id/txt_register"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_45dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_10dp"
                    android:paddingRight="@dimen/_15dp"
                    android:paddingStart="@dimen/_10dp"
                    android:text="@string/register"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/_18sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/im_registration"
                android:layout_width="80dp"
                android:layout_height="@dimen/_80dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5dp"
                android:src="@drawable/nata_logo" />


            <EditText
                android:id="@+id/edt_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45dp"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_15dp"
                android:background="@android:color/transparent"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/_5dp"
                android:textColorHint="@color/light_gray"
                android:textSize="@dimen/_18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_15dp"
                android:background="@color/light_gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="280dp"
                    android:layout_height="@dimen/_45dp"
                    android:layout_marginLeft="@dimen/_15dp"
                    android:layout_marginRight="@dimen/_15dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/_5dp"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/_18sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_show"
                    android:layout_height="wrap_content"
                    android:text="@string/show"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/_14sp" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_15dp"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/txt_forgot_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45dp"
                android:gravity="right|center_vertical"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_15dp"
                android:paddingStart="@dimen/_10dp"
                android:text="@string/forgot_password"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_17sp" />

            <TextView
                android:id="@+id/txt_get_started"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45dp"
                android:layout_marginBottom="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_15dp"
                android:background="@drawable/gray_round_border"
                android:gravity="center"
                android:text="@string/login"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_18sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_15dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">

                <View
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="@dimen/_1dp"
                    android:layout_weight="49"
                    android:background="@color/light_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5dp"
                    android:text="@string/or"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/_16sp" />

                <View
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="@dimen/_1dp"
                    android:layout_weight="49"
                    android:background="@color/light_gray" />
            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="@dimen/_45dp"
                android:layout_margin="@dimen/_10dp"
                android:id="@+id/im_facebook"
                android:background="@drawable/fb_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:text="@string/fb_icon"
                    android:id="@+id/tv_fb_icon"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/_25sp"
                    android:textColor="@color/fb_color"
                    android:contentDescription="@string/facebook" />

                <TextView
                    android:id="@+id/tv_face_book"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/facebook"
                    android:textAllCaps="true"
                    android:textColor="@color/fb_color"
                    android:textSize="@dimen/_15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="@dimen/_45dp"
                android:layout_margin="@dimen/_10dp"
                android:id="@+id/im_google_plus"
                android:background="@drawable/google_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:id="@+id/tv_google_icon"
                    android:textColor="@color/google_plus_color"
                    android:textSize="@dimen/_25sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/google_icon"
                    android:contentDescription="@string/google" />

                <TextView
                    android:id="@+id/tv_google_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:text="@string/google"
                    android:textColor="@color/google_plus_color"
                    android:textSize="@dimen/_15sp" />


            </LinearLayout>


        </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_create_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20dp"
                android:layout_marginTop="@dimen/_25dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_70dp"
                    android:text="@string/new_user"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/_18sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40dp"
                    android:layout_marginStart="@dimen/_10dp"
                    android:background="@drawable/gray_round_border"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_5dp"
                    android:paddingEnd="@dimen/_15dp"
                    android:paddingStart="@dimen/_15dp"
                    android:paddingTop="@dimen/_5dp"
                    android:text="@string/register_now"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_16sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
