<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_first_article"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_160dp"
                    android:src="@drawable/news_view_image"
                    android:scaleType="fitXY" />

                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="@dimen/_50dp"
                    android:layout_height="@dimen/_50dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_first_article_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:ellipsize="end"
                android:maxLines="3"
                android:padding="@dimen/_5dp"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16sp" />

            <TextView
                android:id="@+id/txt_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5dp"
                android:lineSpacingExtra="@dimen/_1dp"
                android:text="@string/app_name"
                android:textColor="@color/dark_gray_color"
                android:textSize="@dimen/_16sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/txt_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/_70dp"
            android:background="@color/gray"
            android:padding="@dimen/_8dp"
            android:text="@string/left_icon"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_35dp" />

        <TextView
            android:id="@+id/txt_right_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_70dp"
            android:background="@color/gray"
            android:padding="@dimen/_8dp"
            android:text="@string/right_icon"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_35dp" />


    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>
