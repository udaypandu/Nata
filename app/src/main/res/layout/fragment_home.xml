<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_registration"
        android:layout_below="@+id/view_item">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_party_updates"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/party_updates"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/_50dp"
                        android:text="@string/Latest_updates"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_18sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_item_boarder_side"
                    android:layout_width="@dimen/_2dp"
                    android:layout_height="match_parent"
                    android:alpha="0.5"
                    android:background="@color/blackColor" />

                <RelativeLayout
                    android:id="@+id/rl_raise_a_concern"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/raise_a_concern"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/_50dp"
                        android:text="@string/services"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_18sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/view_item_boarder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2dp"
                android:alpha="0.5"
                android:background="@color/blackColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_join_discussion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/join_discussion"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/_40dp"
                        android:text="@string/join_discussion"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_18sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_item_boarder_bottom_side"
                    android:layout_width="@dimen/_2dp"
                    android:layout_height="match_parent"
                    android:alpha="0.5"
                    android:background="@color/blackColor" />


                <RelativeLayout
                    android:id="@+id/rl_our_force"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/our_force"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/_40dp"
                        android:text="@string/members_caps"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_18sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/view_item_boarder_bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2dp"
                android:alpha="0.5"
                android:background="@color/blackColor" />
        </LinearLayout>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="@dimen/_120dp"
            android:id="@+id/img_center"
            android:layout_centerInParent="true"
            android:background="@drawable/nata_logo" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/view_not_registered"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/not_registered_image"
            android:visibility="visible" />

        <View
            android:id="@+id/view_sign_in"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2dp"
            android:alpha="0.5"
            android:background="@color/blackColor"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_sign_in"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:visibility="visible">

            <TextView
                android:id="@+id/txt_sign_inn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10dp"
                android:background="@drawable/sign_in"
                android:gravity="center"
                android:text="@string/sign_in_caps"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_manam_manakosam"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100dp"
            android:adjustViewBounds="true"
            android:background="@drawable/nata_banner"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>
