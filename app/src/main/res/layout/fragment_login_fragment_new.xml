<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/very_light_gray"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_login_information"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:background="@color/very_light_gray"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/_10dp"
        android:paddingRight="@dimen/_10dp"
        android:text="@string/login_information"
        android:textSize="@dimen/_20sp" />

    <LinearLayout
        android:id="@+id/ll_email_Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_gray"
        android:orientation="horizontal"
        android:padding="@dimen/_20dp">

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_corners"
            android:focusableInTouchMode="false"
            android:padding="@dimen/_14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_other"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80dp"
        android:background="@color/background_gray"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/_5dp"
            android:layout_marginLeft="@dimen/_30dp"
            android:layout_marginStart="@dimen/_30dp"
            android:text="@string/other_information"
            android:textColor="@color/dark_gray_color"
            android:textSize="@dimen/_20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_it_software"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_gray"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_10dp"
        android:paddingLeft="@dimen/_20dp"
        android:paddingRight="@dimen/_20dp">

        <EditText
            android:id="@+id/edt_occupation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_corners"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:focusableInTouchMode="false"
            android:padding="@dimen/_14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_gray"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_10dp"
        android:paddingLeft="@dimen/_20dp"
        android:paddingRight="@dimen/_20dp">

        <EditText
            android:id="@+id/edt_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_corners"
            android:padding="@dimen/_14dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70dp"
        android:layout_marginBottom="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginTop="@dimen/_30dp"
        android:background="@drawable/red_corners"
        android:gravity="center"
        android:text="@string/update"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_20sp"
        android:textStyle="bold"
        android:visibility="visible" />
</LinearLayout>
